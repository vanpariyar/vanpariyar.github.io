&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">&lt;span class="k">function&lt;/span> &lt;span class="nf">RemoveShortcodes&lt;/span>&lt;span class="p">(&lt;/span>&lt;span class="nv">$beginning&lt;/span>&lt;span class="p">,&lt;/span> &lt;span class="nv">$end&lt;/span>&lt;span class="p">,&lt;/span> &lt;span class="nv">$string&lt;/span>&lt;span class="p">)&lt;/span> &lt;span class="p">{&lt;/span>
