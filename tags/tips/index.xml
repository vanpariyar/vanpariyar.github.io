&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl"> &lt;span class="k">return&lt;/span> &lt;span class="nx">RemoveShortcodes&lt;/span>&lt;span class="p">(&lt;/span>&lt;span class="nv">$beginning&lt;/span>&lt;span class="p">,&lt;/span> &lt;span class="nv">$end&lt;/span>&lt;span class="p">,&lt;/span> &lt;span class="nx">str_replace&lt;/span>&lt;span class="p">(&lt;/span>&lt;span class="nv">$textToDelete&lt;/span>&lt;span class="p">,&lt;/span> &lt;span class="s1">&amp;#39;&amp;#39;&lt;/span>&lt;span class="p">,&lt;/span> &lt;span class="nv">$string&lt;/span>&lt;span class="p">));&lt;/span>
