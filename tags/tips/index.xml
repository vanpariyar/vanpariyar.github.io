&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">&lt;span class="nv">$allPosts&lt;/span> &lt;span class="o">=&lt;/span> &lt;span class="nv">$wpdb&lt;/span>&lt;span class="o">-&amp;gt;&lt;/span>&lt;span class="na">get_results&lt;/span>&lt;span class="p">(&lt;/span>&lt;span class="s2">&amp;#34;SELECT * FROM `wp_posts`&amp;#34;&lt;/span>&lt;span class="p">);&lt;/span>
